{
  "App": {
    "Version": "0.11.0-beta.0"
  },
  "Auth": {
    "Issuer": "ParkSpotTLV",
    "Audience": "ParkSpotTLV.App",
    "AccessTokenMinutes": 10,
    "RefreshTokenDays": 14,
    "ClockSkewMinutes": 1,
    "Signing": {
      "Type": "HMAC",
      "HmacSecret": ""
    },
    "Argon2": {
      "TargetHashMs": 180,
      "MinIterations": 2,
      "MaxIterations": 8,
      "MemoryMiB": 64,
      "Parallelism": 2
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread",
      "Serilog.Settings.Configuration"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/api/log-.json",
          "rollingInterval": "Day",
          "shared": true,
          "flushToDiskInterval": "00:00:03"
        }
      }
    ],
    "Properties": {
      "Application": "BackEnd.Api",
      "ts_kind": "utc"
    }
  },
  "Seq": {
    "Enabled": true,
    "Url": "http://localhost:5341",
    "ApiKey": "l6Ovne0dG4rrOWVjb6bY"
  },
  "Seeding": {
    "Enabled": true,
    "Paths": {
      "Zones": "../ParkSpotTLV.Infrastructure/db/Seed/zones.geojson",
      "StreetSegments": "../ParkSpotTLV.Infrastructure/db/Seed/street_segments.geojson",
      "Users": "../ParkSpotTLV.Infrastructure/db/Seed/users_seed.json"
    }
  }
}