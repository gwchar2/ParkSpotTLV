<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ParkSpotTLV.App.Controls"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="ParkSpotTLV.App.Pages.ShowMapPage"
             Title="Map"
             BackgroundColor="{StaticResource PageBackground}"
             Shell.NavBarIsVisible="True">

        <Shell.BackButtonBehavior>
            <BackButtonBehavior IsVisible="False" />
        </Shell.BackButtonBehavior>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Row: Settings Toggle and Search Bar -->
        <Grid Grid.Row="0" Padding="20,10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Settings Toggle Button -->
            <Button Grid.Column="0"
                    x:Name="SettingsToggleBtn"
                    Text="Settings ▼"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Secondary}"
                    BorderColor="{StaticResource Secondary}"
                    BorderWidth="1"
                    FontSize="14"
                    Padding="10,5"
                    VerticalOptions="Center"
                    Clicked="OnSettingsToggleClicked"
                    WidthRequest="100"
                    HeightRequest="35" />

            <!-- Search Bar -->
            <SearchBar Grid.Column="1"
                       x:Name="AddressSearchBar"
                       Placeholder="Search address..."
                       SearchButtonPressed="OnSearchAddress"
                       BackgroundColor="{StaticResource White}"
                       VerticalOptions="Center" />
        </Grid>        

        <!-- Collapsible Settings Panel -->
        <Border Grid.Row="1"
                x:Name="SettingsPanel"
                BackgroundColor="{StaticResource White}"
                Stroke="{StaticResource Secondary}"
                StrokeThickness="1"
                Padding="5"
                Margin="5,0"
                IsVisible="False"
                StrokeShape="RoundRectangle 10">
            <Grid Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Side - 3 Dropdowns -->
            <VerticalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Start">
                <Border BackgroundColor="{StaticResource White}"
                        Stroke="{StaticResource Secondary}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        WidthRequest="170"
                        HeightRequest="40">
                    <Grid>
                        <Picker x:Name="CarPicker"
                                Title="Pick Car"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Secondary}"
                                TitleColor="{StaticResource Secondary}"
                                SelectedIndex="1"
                                SelectedIndexChanged="OnCarPickerChanged">
                        </Picker>
                        <Label Text="▼"
                               FontSize="12"
                               TextColor="{StaticResource Secondary}"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"
                               InputTransparent="True" />
                    </Grid>
                </Border>

                <Border BackgroundColor="{StaticResource White}"
                        Stroke="{StaticResource Secondary}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        WidthRequest="170"
                        HeightRequest="40">
                    <Grid>
                        <Picker x:Name="DatePicker"
                                Title="Today"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Secondary}"
                                TitleColor="{StaticResource Secondary}"
                                SelectedIndexChanged="OnDatePickerChanged">
                        </Picker>
                        <Label Text="▼"
                               FontSize="12"
                               TextColor="{StaticResource Secondary}"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"
                               InputTransparent="True" />
                    </Grid>
                </Border>

                <Border BackgroundColor="{StaticResource White}"
                        Stroke="{StaticResource Secondary}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        WidthRequest="170"
                        HeightRequest="40">
                    <Grid>
                        <Picker x:Name="TimePicker"
                                Title="Now"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Secondary}"
                                TitleColor="{StaticResource Secondary}"
                                SelectedIndexChanged="OnTimePickerChanged">
                        </Picker>
                        <Label Text="▼"
                               FontSize="12"
                               TextColor="{StaticResource Secondary}"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"
                               InputTransparent="True" />
                    </Grid>
                </Border>
            <!-- Apply Button -->
                <Button
                    x:Name="ApplyBtn"
                    Text="Apply Changes"
                    BackgroundColor="{StaticResource PrimaryAction}"
                    TextColor="{StaticResource White}"
                    FontSize="12"
                    CornerRadius="8"
                    Clicked="OnApplyClicked"
                    HorizontalOptions="Fill"
                    Grid.Column="0"
                    Margin="0,0,0,0" />    
            </VerticalStackLayout>

            <!-- Right Side - 4 CheckBoxes -->
            <VerticalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="End">
                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="NoParkingCheck"
                              IsChecked="True" />
                    <Border BackgroundColor="{StaticResource NoParking}"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 5"
                            WidthRequest="120">
                        <Label Text="No parking"
                               TextColor="{StaticResource White}"
                               Padding="5,5"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center" />
                    </Border>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="PaidParkingCheck"
                              IsChecked="True" />
                    <Border BackgroundColor="{StaticResource PaidParking}"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 5"
                            WidthRequest="120">
                        <Label Text="Paid parking"
                               TextColor="{StaticResource White}"
                               Padding="5,5"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center" />
                    </Border>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="FreeParkingCheck"
                              IsChecked="True" />
                    <Border BackgroundColor="{StaticResource FreeParking}"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 5"
                            WidthRequest="120">
                        <Label Text="Free parking"
                               TextColor="{StaticResource Black}"
                               Padding="5,5"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center" />
                    </Border>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="RestrictedCheck"
                              IsChecked="True" />
                    <Border BackgroundColor="{StaticResource RestrictedParking}"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 5"
                            WidthRequest="120">
                        <Label Text="Restricted"
                               TextColor="{StaticResource Black}"
                               Padding="5,5"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Center" />
                    </Border>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
        </Border>

        <!-- Map with Floating Track Button and Park Here Button -->
        <Grid Grid.Row="2">
            <Border Padding="0"
                    StrokeThickness="1"
                    Stroke="{StaticResource Secondary}"
                    StrokeShape="RoundRectangle 10"
                    Margin="1">
                <maps:Map x:Name="MyMap" />
            </Border>

            <!-- Floating Track Location Toggle (Top Left) -->
            <VerticalStackLayout HorizontalOptions="Start"
                                 VerticalOptions="Start"
                                 Margin="10"
                                 Spacing="5">
                <Border BackgroundColor="{StaticResource White}"
                        StrokeThickness="0"
                        Padding="5,2"
                        StrokeShape="RoundRectangle 5"
                        HorizontalOptions="Center">
                    <Label Text="Follow Me"
                           FontSize="10"
                           TextColor="{StaticResource Secondary}"
                           HorizontalOptions="Center" />
                </Border>

                <!-- Toggle Switch Container -->
                <Border BackgroundColor="#CCCCCC"
                        StrokeThickness="0"
                        WidthRequest="50"
                        HeightRequest="30"
                        StrokeShape="RoundRectangle 15"
                        HorizontalOptions="Center">
                    <Grid>
                        <!-- Background -->
                        <BoxView x:Name="TrackLocationToggleBg"
                                 Color="#FFF5F5F5" />

                        <Button Clicked="OnTrackLocationToggleClicked"
                                BackgroundColor="Transparent"
                                WidthRequest="50"
                                HeightRequest="30" />

                        <!-- Toggle Circle -->
                        <Ellipse x:Name="TrackLocationToggleCircle"
                                 Fill="White"
                                 WidthRequest="26"
                                 HeightRequest="26"
                                 HorizontalOptions="Start"
                                 VerticalOptions="Center"
                                 Margin="2,0,0,0" />
                    </Grid>
                </Border>
            </VerticalStackLayout>
            
            <!-- Ended Session Overlay Summary -->
            <Grid x:Name="EndSessionOverlay"
                  IsVisible="False"
                  ZIndex="100"
                  BackgroundColor="#80000000"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill">

                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayBackdropTapped"/>
                </Grid.GestureRecognizers>

                <!-- Centered card -->
                <Border HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="16"
                        BackgroundColor="{StaticResource White}"
                        Stroke="{StaticResource Secondary}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 14"
                        WidthRequest="320"
                        MaximumWidthRequest="360">
                    
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Parking summary" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource Secondary}"/>

                        <Grid ColumnSpacing="8" RowSpacing="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Text="Street:" TextColor="{StaticResource Secondary}" FontSize="13"/>
                            <Label Grid.Row="0" Grid.Column="1" x:Name="Summary_Street" FontSize="13" LineBreakMode="TailTruncation"/>

                            <Label Grid.Row="1" Grid.Column="0" Text="Started:" TextColor="{StaticResource Secondary}" FontSize="13"/>
                            <Label Grid.Row="1" Grid.Column="1" x:Name="Summary_Start" FontSize="13"/>

                            <Label Grid.Row="2" Grid.Column="0" Text="Ended:" TextColor="{StaticResource Secondary}" FontSize="13"/>
                            <Label Grid.Row="2" Grid.Column="1" x:Name="Summary_End" FontSize="13"/>

                            <Label Grid.Row="3" Grid.Column="0" Text="Duration:" TextColor="{StaticResource Secondary}" FontSize="13"/>
                            <Label Grid.Row="3" Grid.Column="1" x:Name="Summary_Duration" FontSize="13"/>
                        </Grid>

                        <Button Text="OK" Clicked="OnOverlayOkClicked" Margin="0,6,0,0"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
            
            <!-- Active Session Summary Card (hidden by default) -->
            <Border x:Name="SessionSummaryCard"
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    Margin="20,0,20,80"
                    Padding="12"
                    BackgroundColor="{StaticResource White}"
                    Stroke="{StaticResource Secondary}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    IsVisible="False"
                    Opacity="0.97"
                    ZIndex="10">

                <Grid ColumnSpacing="10" RowSpacing="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- title -->
                        <RowDefinition Height="Auto"/>
                        <!-- street -->
                        <RowDefinition Height="Auto"/>
                        <!-- start -->
                        <RowDefinition Height="Auto"/>
                        <!-- end -->
                        <RowDefinition Height="Auto"/>
                        <!-- budget -->
                        <RowDefinition Height="Auto"/>
                        <!-- status -->
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <Label Grid.Row="0" Grid.ColumnSpan="2"
                           Text="Parking Session"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource Secondary}"/> 

                    <Label Grid.Row="1" Grid.Column="0" Text="Street:" FontSize="12" TextColor="{StaticResource Secondary}"/>
                    <Label Grid.Row="1" Grid.Column="1" x:Name="Sum_Street" FontSize="12" TextColor="{StaticResource Black}"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Start:" FontSize="12" TextColor="{StaticResource Secondary}"/>
                    <Label Grid.Row="2" Grid.Column="1" x:Name="Sum_Start" FontSize="12" TextColor="{StaticResource Black}"/>

                    <Label Grid.Row="3" Grid.Column="0" Text="End:" FontSize="12" TextColor="{StaticResource Secondary}"/>
                    <Label Grid.Row="3" Grid.Column="1" x:Name="Sum_End" FontSize="12" TextColor="{StaticResource Black}"/>
                </Grid>
            </Border>

            <!-- Parking Buttons - Floating at Bottom -->
            <HorizontalStackLayout x:Name="ParkingButtonsContainer"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Spacing="10"
                                   Margin="20,10,20,20">
                <Button x:Name="ParkHereBtn"
                        Text="Park Here"
                        BackgroundColor="{StaticResource White}"
                        BorderColor="{StaticResource Primary}"
                        BorderWidth="3"
                        TextColor="{StaticResource Primary}"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnParkHereClicked"
                        HorizontalOptions="Center"
                        CornerRadius="25"
                        HeightRequest="50" />

                <Button x:Name="PayWithPangoBtn"
                        Text="Pay with Pango"
                        BackgroundColor="{StaticResource White}"
                        TextColor="Blue"
                        BorderColor="Blue"
                        BorderWidth="3"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnPayWithPangoClicked"
                        HorizontalOptions="FillAndExpand"
                        CornerRadius="25"
                        HeightRequest="50"
                        IsVisible="False" />
            </HorizontalStackLayout>
        </Grid>

    </Grid>
</ContentPage>