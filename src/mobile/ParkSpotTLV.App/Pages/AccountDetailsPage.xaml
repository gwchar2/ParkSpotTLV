<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkSpotTLV.App.Pages.AccountDetailsPage"
             Title="Account Details"
             BackgroundColor="{StaticResource PageBackground}">

    <Grid Padding="10" RowDefinitions="Auto,*,Auto">
        <!-- Header + User Info -->
        <VerticalStackLayout Spacing="15" Grid.Row="0">
            <Label Text="Account Details"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"
                   Margin="0,10,0,20" />

            <!-- Username Section with Change Password Button -->
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                <Label Text="Username"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Black}"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                <Entry x:Name="UsernameEntry"
                       Text="john_doe"
                       IsReadOnly="True"
                       FontSize="16"
                       VerticalOptions="Center"
                       Grid.Column="1" />
                <Button x:Name="ChangePasswordBtn"
                        Text="Change Password"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Secondary}"
                        BorderColor="{StaticResource Secondary}"
                        BorderWidth="1"
                        FontSize="14"
                        Padding="10,5"
                        VerticalOptions="Center"
                        Grid.Column="2"
                        Clicked="OnChangePasswordClicked" />
            </Grid>

            <!-- Password Section -->
            <VerticalStackLayout Spacing="10">

                <!-- Password Change Fields (initially hidden) -->
                <VerticalStackLayout x:Name="PasswordChangeSection"
                                    Spacing="5"
                                    IsVisible="False">
                    <Entry x:Name="OldPasswordEntry"
                           Placeholder="Current Password"
                           IsPassword="True"
                           FontSize="16" />
                    <Entry x:Name="NewPasswordEntry"
                           Placeholder="New Password"
                           IsPassword="True"
                           FontSize="16" />
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="Confirm New Password"
                           IsPassword="True"
                           FontSize="16" />
                    <HorizontalStackLayout Spacing="5" HorizontalOptions="End">
                        <Button x:Name="CancelPasswordBtn"
                                Text="Cancel"
                                BackgroundColor="{StaticResource SecondaryAction}"
                                TextColor="{StaticResource White}"
                                FontSize="14"
                                WidthRequest="70"
                                HeightRequest="35"
                                Clicked="OnCancelPasswordClicked" />
                        <Button x:Name="SavePasswordBtn"
                                Text="Save"
                                BackgroundColor="{StaticResource Success}"
                                TextColor="{StaticResource White}"
                                FontSize="14"
                                WidthRequest="70"
                                HeightRequest="35"
                                Clicked="OnSavePasswordClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Divider -->
            <BoxView BackgroundColor="{StaticResource ContainerBackground}"
                     HeightRequest="1"
                     Margin="0,10" />

            <!-- My Cars Header with Add Car Button -->
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10" Margin="0,0,0,10">
                <Label Text="My Cars"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                <Button x:Name="AddCarBtn"
                        Text="+ Add Car"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource PrimaryAction}"
                        BorderColor="{StaticResource PrimaryAction}"
                        BorderWidth="2"
                        FontSize="14"
                        Clicked="OnAddCarClicked"
                        Grid.Column="1"
                        Padding="10,5" />
            </Grid>
        </VerticalStackLayout>

        <!-- Cars List Scrollable -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="CarsContainer" Spacing="15">
                <!-- Cars will be dynamically added here -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Find Parking Button Fixed at Bottom -->
        <Button x:Name="FindParkingBtn"
                Text="Find Parking"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource White}"
                FontSize="16"
                Clicked="OnFindParkingClicked"
                HorizontalOptions="Fill"
                HeightRequest="50"
                CornerRadius="25"
                Margin="0,0,0,20"
                Grid.Row="2" />
    </Grid>
</ContentPage>
