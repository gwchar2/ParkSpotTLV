<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="ParkSpotTLV.App.Controls.MenuOverlay"
      x:Name="MenuOverlayGrid"
      IsVisible="False"
      BackgroundColor="Transparent">

    <Grid.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnOverlayTapped" />
    </Grid.GestureRecognizers>

    <Border x:Name="MenuPanel"
            BackgroundColor="{StaticResource PrimaryTransperent}"
            WidthRequest="250"
            HorizontalOptions="End"
            VerticalOptions="Fill"
            TranslationX="250">
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <VerticalStackLayout Grid.Row="0" Spacing="20">
                <Label Text="Menu"
                       FontSize="22"
                       TextColor="White"
                       FontAttributes="Bold"
                       Margin="0,20,0,30" />

                <Button Text="Account Details"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="16"
                        HorizontalOptions="Start"
                        Clicked="OnAccountDetailsClicked" />

                <Button Text="Preferences"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="16"
                        HorizontalOptions="Start"
                        Clicked="OnPreferencesClicked" />

                <Button Text="Logout"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Warning}"
                        FontSize="16"
                        HorizontalOptions="Start"
                        Clicked="OnLogoutClicked" />
            </VerticalStackLayout>

            <Label x:Name="Credits"
                   Grid.Row="1"
                   Text="ParkSpotTLV By Tomer T. and Michal R."
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Start"
                   VerticalOptions="End"
                   Margin="0,20,0,0"/>

           <Label x:Name="VersionLabel"
                   Grid.Row="2"
                   Text="Version: ..."
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Start"
                   VerticalOptions="End"
                   Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Grid>