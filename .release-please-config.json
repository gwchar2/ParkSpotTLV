{
  "$schema": "https://github.com/googleapis/release-please/raw/main/schemas/config.json",
  "prerelease": false,
  "include-v-in-tag": true,
  "packages": {
    ".": {
      "changelog-path": "CHANGELOG.md",
      "release-type": "simple",
      "extra-files": [
        {
          "type": "json",
          "path": "src/backend/ParkSpotTLV.Api/appsettings.json",
          "jsonpath": "$.App.Version"
        },
        {
          "type": "json",
          "path": "src/backend/ParkSpotTLV.Api/appsettings.Development.json",
          "jsonpath": "$.App.Version"
        }
      ]
    }
  }
}
