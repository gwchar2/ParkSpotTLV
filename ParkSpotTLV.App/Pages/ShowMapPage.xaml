<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ParkSpotTLV.App.Controls"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="ParkSpotTLV.App.Pages.ShowMapPage"
             Title="Map">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Row: Settings Toggle and Search Bar -->
        <Grid Grid.Row="0" Padding="20,10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Settings Toggle Button -->
            <Button Grid.Column="0"
                    x:Name="SettingsToggleBtn"
                    Text="Settings ▼"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="12"
                    Clicked="OnSettingsToggleClicked"
                    WidthRequest="100"
                    HeightRequest="35" />

            <!-- Search Bar -->
            <SearchBar Grid.Column="1"
                       x:Name="AddressSearchBar"
                       Placeholder="Search address..."
                       SearchButtonPressed="OnSearchAddress"
                       BackgroundColor="White"
                       VerticalOptions="Center" />
        </Grid>        

        <!-- Collapsible Settings Panel -->
        <Border Grid.Row="1"
                x:Name="SettingsPanel"
                BackgroundColor="White"
                Stroke="Gray"
                StrokeThickness="1"
                Padding="5"
                Margin="5,0"
                IsVisible="False"
                StrokeShape="RoundRectangle 10">
            <Grid Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Side - 3 Dropdowns -->
            <VerticalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Start">
                <Border BackgroundColor="White"
                        Stroke="Gray"
                        StrokeThickness="1"
                        WidthRequest="170"
                        HeightRequest="40">
                    <Grid>
                        <Picker x:Name="CarPicker"
                                Title="Pick Car"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                TitleColor="Gray"
                                SelectedIndex="1"
                                SelectedIndexChanged="OnCarPickerChanged">
                        </Picker>
                        <Label Text="▼"
                               FontSize="12"
                               TextColor="Gray"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"
                               InputTransparent="True" />
                    </Grid>
                </Border>

                <Border BackgroundColor="White"
                        Stroke="Gray"
                        StrokeThickness="1"
                        WidthRequest="170"
                        HeightRequest="40">
                    <Grid>
                        <Picker x:Name="DatePicker"
                                Title="Today"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                TitleColor="Gray"
                                SelectedIndexChanged="OnDatePickerChanged">
                        </Picker>
                        <Label Text="▼"
                               FontSize="12"
                               TextColor="Gray"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"
                               InputTransparent="True" />
                    </Grid>
                </Border>

                <Border BackgroundColor="White"
                        Stroke="Gray"
                        StrokeThickness="1"
                        WidthRequest="170"
                        HeightRequest="40">
                    <Grid>
                        <Picker x:Name="TimePicker"
                                Title="Now"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                TitleColor="Gray"
                                SelectedIndexChanged="OnTimePickerChanged">
                        </Picker>
                        <Label Text="▼"
                               FontSize="12"
                               TextColor="Gray"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,5,0"
                               InputTransparent="True" />
                    </Grid>
                </Border>
            <!-- Apply Button -->
                <Button
                    x:Name="ApplyBtn"
                    Text="Apply Changes"
                    BackgroundColor="#D4DEFB"
                    TextColor="White"
                    FontSize="12"
                    Clicked="OnApplyClicked"
                    HorizontalOptions="Fill"
                    Grid.Column="0"
                    Margin="0,0,0,0" />    
            </VerticalStackLayout>

            <!-- Right Side - 4 CheckBoxes -->
            <VerticalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="End">
                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="NoParkingCheck"
                              IsChecked="True" />
                    <Label Text="No parking"
                           BackgroundColor="#f15151"
                           TextColor="White"
                           Padding="5,5"
                           WidthRequest="120"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="PaidParkingCheck"
                              IsChecked="True" />
                    <Label Text="Paid parking"
                           BackgroundColor="#4769b9"
                           TextColor="White"
                           Padding="5,5"
                           WidthRequest="120"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="FreeParkingCheck"
                              IsChecked="True" />
                    <Label Text="Free parking"
                           BackgroundColor="#40dd7c"
                           TextColor="Black"
                           Padding="5,5"
                           WidthRequest="120"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <CheckBox x:Name="RestrictedCheck"
                              IsChecked="True" />
                    <Label Text="Restricted"
                           BackgroundColor="#f2d158"
                           TextColor="Black"
                           Padding="5,5"
                           WidthRequest="120"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
        </Border>

        

        <!-- Map with Floating Track Button -->
        <Grid Grid.Row="3">
            <Border Padding="0"
                    StrokeThickness="1"
                    Stroke="Gray"
                    StrokeShape="RoundRectangle 10"
                    Margin="1">
                <maps:Map x:Name="MyMap" />
            </Border>

            <!-- Floating Track Location Toggle (Top Left) -->
            <VerticalStackLayout HorizontalOptions="Start"
                                 VerticalOptions="Start"
                                 Margin="10"
                                 Spacing="5">
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="5,2"
                        StrokeShape="RoundRectangle 5"
                        HorizontalOptions="Center">
                    <Label Text="Follow Me"
                           FontSize="10"
                           TextColor="Black"
                           HorizontalOptions="Center" />
                </Border>

                <!-- Toggle Switch Container -->
                <Border BackgroundColor="#CCCCCC"
                        StrokeThickness="0"
                        WidthRequest="50"
                        HeightRequest="30"
                        StrokeShape="RoundRectangle 15"
                        HorizontalOptions="Center">
                    <Grid>
                        <!-- Background -->
                        <BoxView x:Name="TrackLocationToggleBg"
                                 Color="#CCCCCC" />

                        <Button Clicked="OnTrackLocationToggleClicked"
                                BackgroundColor="Transparent"
                                WidthRequest="50"
                                HeightRequest="30" />

                        <!-- Toggle Circle -->
                        <Ellipse x:Name="TrackLocationToggleCircle"
                                 Fill="White"
                                 WidthRequest="26"
                                 HeightRequest="26"
                                 HorizontalOptions="Start"
                                 VerticalOptions="Center"
                                 Margin="2,0,0,0" />
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </Grid>

        <!-- "Park Here" button-->
        <Button Grid.Row="4"
                x:Name="ParkHereBtn"
                Text="Park Here"
                BackgroundColor="#2E7D32"
                TextColor="White"
                FontSize="16"
                Clicked="OnParkHereClicked"
                HorizontalOptions="Fill"
                Margin="20,10"
                HeightRequest="50" />

    </Grid>
</ContentPage>