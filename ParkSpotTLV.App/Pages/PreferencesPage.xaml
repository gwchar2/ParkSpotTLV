<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkSpotTLV.App.Pages.PreferencesPage"
             Title="Preferences"
             BackgroundColor="#E8E8F0">

    <ScrollView Padding="30">
        <VerticalStackLayout Spacing="30" VerticalOptions="Start">

            <!-- Header -->
            <Label Text="Map Preferences"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,20,0,0" />

            <!-- Minimum Parking Time Section -->
            <VerticalStackLayout Spacing="15">
                <Label Text="Minimum parking time"
                       FontSize="16"
                       TextColor="Black" />

                <!-- Minutes Dropdown -->
                <Border BackgroundColor="White"
                        Stroke="Gray"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 5"
                        WidthRequest="150"
                        HeightRequest="40"
                        HorizontalOptions="Start">
                    <Grid>
                        <Picker x:Name="MinutesPickerParking"
                                Title="30 minutes"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                TitleColor="Black"
                                FontSize="16"
                                SelectedIndex="2"
                                SelectedIndexChanged="OnMinutesPickerChanged">
                            <Picker.Items>
                                <x:String>10 minutes</x:String>
                                <x:String>15 minutes</x:String>
                                <x:String>30 minutes</x:String>
                                <x:String>45 minutes</x:String>
                                <x:String>60 minutes</x:String>
                                <x:String>90 minutes</x:String>
                                <x:String>120 minutes</x:String>
                            </Picker.Items>
                        </Picker>
                        <Label Text="â–¼"
                               FontSize="12"
                               TextColor="Gray"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               Margin="0,0,10,0"
                               InputTransparent="True" />
                    </Grid>
                </Border>

                <Label x:Name="ParkingExplanationLabel"
                       Text="parking with less than 30 minutes will now be yellow."
                       FontSize="14"
                       TextColor="Gray"
                       HorizontalOptions="Start" />
            </VerticalStackLayout>

            <!-- Buttons Section -->
            <VerticalStackLayout Spacing="20" Margin="0,40,0,0">
                <!-- Save Button -->
                <Button x:Name="SaveBtn"
                        Text="Save"
                        BackgroundColor="White"
                        TextColor="Gray"
                        BorderColor="Gray"
                        BorderWidth="2"
                        FontSize="16"
                        Clicked="OnSaveClicked"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        CornerRadius="25" />

                <!-- Find Parking Button -->
                <Button x:Name="FindParkingBtn"
                        Text="Find Parking"
                        BackgroundColor="White"
                        TextColor="Gray"
                        BorderColor="Gray"
                        BorderWidth="2"
                        FontSize="16"
                        Clicked="OnFindParkingClicked"
                        HorizontalOptions="Fill"
                        HeightRequest="50"
                        CornerRadius="25" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>