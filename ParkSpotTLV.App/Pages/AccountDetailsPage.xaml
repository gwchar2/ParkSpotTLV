<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkSpotTLV.App.Pages.AccountDetailsPage"
             Title="Account Details">

    <Grid>
        <ScrollView Padding="20">
            <VerticalStackLayout Spacing="25">

                <!-- Header -->
                <Label Text="Account Details"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#2E7D32"
                       Margin="0,10,0,20" />

                <!-- Username Section -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Username"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black" />
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry x:Name="UsernameEntry"
                               Grid.Column="0"
                               Text="john_doe"
                               IsReadOnly="True"
                               BackgroundColor="LightGray"
                               FontSize="16" />
                        <Button x:Name="EditUsernameBtn"
                                Grid.Column="1"
                                Text="Edit"
                                BackgroundColor="#2E7D32"
                                TextColor="White"
                                FontSize="14"
                                WidthRequest="70"
                                HeightRequest="40"
                                Clicked="OnEditUsernameClicked" />
                    </Grid>
                </VerticalStackLayout>

                <!-- Password Section -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Password"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black" />
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry x:Name="PasswordEntry"
                               Grid.Column="0"
                               Text="••••••••"
                               IsPassword="True"
                               IsReadOnly="True"
                               BackgroundColor="LightGray"
                               FontSize="16" />
                        <Button x:Name="EditPasswordBtn"
                                Grid.Column="1"
                                Text="Edit"
                                BackgroundColor="#2E7D32"
                                TextColor="White"
                                FontSize="14"
                                WidthRequest="70"
                                HeightRequest="40"
                                Clicked="OnEditPasswordClicked" />
                    </Grid>
                </VerticalStackLayout>

                <!-- Divider -->
                <BoxView BackgroundColor="LightGray"
                         HeightRequest="1"
                         Margin="0,10" />

                <!-- My Cars Section -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="My Cars"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2E7D32" />

                    <!-- Cars List -->
                    <VerticalStackLayout x:Name="CarsContainer" Spacing="15">
                        <!-- Cars will be dynamically added here -->
                    </VerticalStackLayout>

                    <!-- Add Car Button -->
                    <Button x:Name="AddCarBtn"
                            Text="+ Add Car"
                            BackgroundColor="Transparent"
                            TextColor="#2E7D32"
                            BorderColor="#2E7D32"
                            BorderWidth="2"
                            FontSize="16"
                            Clicked="OnAddCarClicked"
                            HorizontalOptions="Fill"
                            HeightRequest="50"
                            Margin="0,10,0,0" />
                    <!-- Find Parking Button -->
                    <Button x:Name="FindParkingBtn"
                            Text="Find Parking"
                            BackgroundColor="White"
                            TextColor="Gray"
                            BorderColor="Gray"
                            BorderWidth="2"
                            FontSize="16"
                            Clicked="OnFindParkingClicked"
                            HorizontalOptions="Fill"
                            HeightRequest="50"
                            CornerRadius="25" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>