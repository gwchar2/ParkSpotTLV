<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkSpotTLV.App.Pages.AccountDetailsPage"
             Title="Account Details">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto">
        <!-- Header + User Info -->
        <VerticalStackLayout Spacing="25" Grid.Row="0">
            <Label Text="Account Details"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"
                   Margin="0,10,0,20" />

                <!-- Username Section -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Username"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Black}" />
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry x:Name="UsernameEntry"
                               Grid.Column="0"
                               Text="john_doe"
                               IsReadOnly="True"
                               BackgroundColor="{StaticResource InputFieldBackground}"
                               FontSize="16" />
                    </Grid>
                </VerticalStackLayout>

                <!-- Password Section -->
                <VerticalStackLayout Spacing="5">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Button x:Name="ChangePasswordBtn"
                                Grid.Column="0"
                                Text="Change Password"
                                BackgroundColor="{StaticResource PrimaryAction}"
                                TextColor="{StaticResource White}"
                                FontSize="14"
                                WidthRequest="260"
                                HeightRequest="40"
                                Clicked="OnChangePasswordClicked" />
                    </Grid>

                    <!-- Password Change Fields (initially hidden) -->
                    <VerticalStackLayout x:Name="PasswordChangeSection"
                                        Spacing="5"
                                        IsVisible="False">
                        <Entry x:Name="OldPasswordEntry"
                               Placeholder="Current Password"
                               IsPassword="True"
                               FontSize="16" />
                        <Entry x:Name="NewPasswordEntry"
                               Placeholder="New Password"
                               IsPassword="True"
                               FontSize="16" />
                        <Entry x:Name="ConfirmPasswordEntry"
                               Placeholder="Confirm New Password"
                               IsPassword="True"
                               FontSize="16" />
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="End">
                            <Button x:Name="CancelPasswordBtn"
                                    Text="Cancel"
                                    BackgroundColor="{StaticResource SecondaryAction}"
                                    TextColor="{StaticResource White}"
                                    FontSize="14"
                                    WidthRequest="70"
                                    HeightRequest="35"
                                    Clicked="OnCancelPasswordClicked" />
                            <Button x:Name="SavePasswordBtn"
                                    Text="Save"
                                    BackgroundColor="{StaticResource Success}"
                                    TextColor="{StaticResource White}"
                                    FontSize="14"
                                    WidthRequest="70"
                                    HeightRequest="35"
                                    Clicked="OnSavePasswordClicked" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>

            <!-- Divider -->
            <BoxView BackgroundColor="{StaticResource ContainerBackground}"
                     HeightRequest="1"
                     Margin="0,10" />

            <!-- My Cars Title -->
            <Label Text="My Cars"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}" />
        </VerticalStackLayout>

        <!-- Cars List Scrollable -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="CarsContainer" Spacing="15">
                <!-- Cars will be dynamically added here -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Buttons Fixed at Bottom -->
        <VerticalStackLayout Grid.Row="2" Spacing="10">
            <Button x:Name="AddCarBtn"
                    Text="+ Add Car"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="2"
                    FontSize="16"
                    Clicked="OnAddCarClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="50" />
            <Button x:Name="FindParkingBtn"
                    Text="Find Parking"
                    BackgroundColor="{StaticResource White}"
                    TextColor="{StaticResource Secondary}"
                    BorderColor="{StaticResource Secondary}"
                    BorderWidth="2"
                    FontSize="16"
                    Clicked="OnFindParkingClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="50"
                    CornerRadius="25"
                    Margin="0,0,0,20" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
