<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkSpotTLV.App.Pages.MyCarsPage"
             Title="My Cars">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Padding="20,10">
            <Label
                Text="My Cars"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#2E7D32" />
        </VerticalStackLayout>

        <!-- Cars List -->
        <ScrollView Grid.Row="1" Padding="20,0">
            <VerticalStackLayout x:Name="CarsContainer" Spacing="15">
                <!-- Cars will be dynamically added here -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Buttons -->
        <VerticalStackLayout Grid.Row="2"
                           Padding="20"
                           Spacing="15">
            <Button
                x:Name="AddCarBtn"
                Text="Add Car"
                BackgroundColor="#2E7D32"
                TextColor="White"
                FontSize="16"
                Clicked="OnAddCarClicked"
                HorizontalOptions="Fill"
                HeightRequest="50" />

            <Button
                x:Name="ShowMapBtn"
                Text="Show Map"
                BackgroundColor="Transparent"
                TextColor="#2E7D32"
                BorderColor="#2E7D32"
                BorderWidth="2"
                FontSize="16"
                Clicked="OnShowMapClicked"
                HorizontalOptions="Fill"
                HeightRequest="50" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>